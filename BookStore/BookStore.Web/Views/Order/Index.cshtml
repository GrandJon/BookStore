@model IEnumerable<BookStore.Web.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>订单表</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Province)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="record_@item.OrderId">
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("订单详情", "Details", new { id=item.OrderId }) |
            <a  class="delete" data-id="@item.OrderId">删除</a>
        </td>
    </tr>
}

</table>
@section Scripts {
<script src="~/Scripts/bootbox.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $(".delete").click(function () {
                var recordID = $(this).attr("data-id");
                    bootbox.dialog({
                        size: "small",
                        onEscape: "true",
                        message: "你确定要删除该订单吗?",
                        title: "操作确认",
                        buttons: {
                            OK: {
                                label: " 确定 ",
                                className: "red-haze fa fa-check ",
                                callback: function () {
                                    $.post("/Order/Delete",
                                    { recordID: recordID },
                                    function (data) {
                                        if (data.Status==1) {
                                            $("#record_" + recordID).fadeOut();
                                            alert("删除成功！");
                                        }
                                        else {
                                            alert("操作发生异常,删除失败！");
                                        }
                                    });
                                }
                            },
                            Cancel: {
                                label: " 取消 ",
                                className: "green-jungle fa fa-times ",
                                callback: function () {
                                }
                            }
                        }
                    });
            });
        });
    </script>
}